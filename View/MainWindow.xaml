<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">

    <Grid>
        <!-- Define RowDefinitions for the Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top StackPanel, Auto height adjusts to its content -->
            <RowDefinition Height="*"/> <!-- Center Frame, * takes the remaining space -->
            <RowDefinition Height="Auto"/> <!-- Bottom StackPanel, Auto height adjusts to its content -->
        </Grid.RowDefinitions>

        <!-- Top StackPanel -->
        <StackPanel Orientation="Vertical" Height="100" VerticalAlignment="Top" Grid.Row="0"/>

        <!-- Center Frame -->
        <Frame x:Name="MainContent" VerticalAlignment="Stretch" Grid.Row="1"/>

        <!-- Bottom StackPanel -->
        <StackPanel Orientation="Vertical" Height="100" VerticalAlignment="Bottom" Grid.Row="2"/>

    </Grid>
</Window>
