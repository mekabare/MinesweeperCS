<Window x:Class="Minesweeper.View.HowToDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper.View"
        mc:Ignorable="d"
        Title="HowToDialog" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,10">
            <Label HorizontalContentAlignment="Left" Content="Hilfstext: "/>
            
            <!--Hier steht der Text drinne, der aus der Datei importiert wird-->
            <Label x:Name="Hilfstextbox"
                   Margin="0,5"
                   />
        </StackPanel>
    </Grid>
</Window>
